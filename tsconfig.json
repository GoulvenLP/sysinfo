{
    "compilerOptions": {
      "module": "commonjs",
      "typeRoots": [
        "node_modules/@types"
      ],
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2019",
      "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true
    },
    "exclude": ["node_modules", "dist"]
  }
  